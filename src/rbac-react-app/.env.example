# Development Environment Variables
# This file is for local development only

# API Configuration
VITE_API_URL=http://localhost:5225/api
VITE_API_TIMEOUT=30000
VITE_API_DEBUG=false

# Application Configuration
VITE_APP_NAME=RBAC System
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=rbac_auth_token
VITE_SESSION_TIMEOUT=60
VITE_REMEMBER_ME_DAYS=30

# Feature Flags
VITE_FEATURE_EXPORT=true
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_USER_PERMISSIONS_VIEW=true
VITE_FEATURE_ADVANCED_SEARCH=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_MOBILE_SIDEBAR_COLLAPSED=true

# Notification Configuration
VITE_TOAST_DURATION=3000
VITE_TOAST_POSITION=top-right

# Performance Configuration
VITE_LAZY_LOADING=true
VITE_API_CACHE_DURATION=0
VITE_ENABLE_PWA=false

# Development Configuration
VITE_SHOW_ERROR_DETAILS=true
VITE_REACT_STRICT_MODE=true
VITE_HMR=true

# Analytics & Monitoring
VITE_ENABLE_MONITORING=false

# Security Configuration
VITE_FORCE_HTTPS=false

# Localization
VITE_DEFAULT_LOCALE=en
VITE_AVAILABLE_LOCALES=en,es,fr